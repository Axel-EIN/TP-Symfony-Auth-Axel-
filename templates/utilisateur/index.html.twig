{% extends 'base.html.twig' %}

{% block html_title %}Utilisateur index{% endblock %}

{% block titre %}Liste des Utilisateurs{% endblock %}

{% block body %}

    <a class="float-right btn btn-primary" href="{{ path('utilisateur_new') }}">Cr√©er un nouvel utilisateur</a>

    <table class="table my-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.id }}</td>
                <td>{{ utilisateur.pseudo }}</td>
                <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
                <td>{{ utilisateur.password }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('utilisateur_show', {'id': utilisateur.id}) }}">Voir</a>
                    <a class="btn btn-warning" href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas encore d'utilisateur</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
